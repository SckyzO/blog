---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';

// Récupération et tri des articles
// Phase de validation : getCollection utilise le schéma défini dans config.ts
// Les articles invalides seront rejetés au build
const posts = (await getCollection('blog'))
    .filter(post => !post.data.isDraft) // Validation métier : on ne montre pas les brouillons
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

---

<BaseLayout title="Accueil | Tomzone Blog">
    <Header slot="header" />
    
    <section class="py-12">
        <h1 class="text-5xl font-bold text-center mb-12">Bienvenue sur le Blog</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
                <Card 
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                    url={`/blog/${post.id}/`}
                    image={post.data.heroImage}
                    tags={post.data.tags}
                />
            ))}
        </div>
    </section>

    <Footer slot="footer" />
</BaseLayout>